/* pages/record/record.wxss */
.header-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.record-title {
  margin-top: 88rpx;
  width: 656rpx;
  height: 214rpx;
  background: linear-gradient(0deg,rgba(46,66,213,1) 0%,rgba(88,133,246,1) 100%);
  border-radius: 10rpx;
}

.avatar {
  margin-right: 25rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.title-info {
  display: flex;
  align-items: center;
  padding: 0 69rpx 0 54rpx;
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 18px;
  font-family: PingFangSC-Regular;
  font-weight: bold;
}

.info-gold {
  margin: 0 27rpx 0 190rpx;
  width: 30rpx;
  height: 34rpx;
}

.record-wrap {
  position: relative;
  margin-top: 64rpx;
  width: 656rpx;
  color: #fff;
  text-align: center;
}

.record-star {
  position: absolute;
  top: 12rpx;
  width: 29rpx;
  height: 25rpx;
}

.table-header {
  display: flex;
  margin-top: 41rpx;
  width: 656rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(21,91,195,1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  font-size: 12px;
  font-family: HiraginoSansGB-W3;
  font-weight: bold;
  color: rgba(255,252,0,1);
  text-align: center;
  box-sizing: border-box;
}

.list-item {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(85,129,255,0.61);
  color: #fff;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  box-sizing: border-box;
}

.list-item view {
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.list-view {
  width: 100%;
  height: 800rpx;
}
