/* pages/award/award.wxss */
.header-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.award-show {
  margin-top: 120rpx;
  width: 520rpx;
  height: 229rpx;
}

.award-data {
  position: relative;
  margin-top: 50rpx;
  width: 520rpx;
  color: #fff;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
}

.award-gold {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 15px;
  font-family: Adobe Heiti Std R;
  font-weight: bold;
}

.award-gold image {
  margin-right: 12rpx;
  transform: translateY(4rpx);
  width: 25rpx;
  height: 28rpx;
}

.spin-wrap {
  position: relative;
}

.spin-container {
  position: relative;
}

.spin-item {
  position: absolute;
  top: 31%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  transform-origin: 50% 250%;
  width: 130rpx;
  height: 68rpx;
  font-size: 14px;
  font-family: SourceHanSansCN-Medium;
  color: rgba(252,255,12,1);
  text-align: center;
}

.award-spin {
  width: 586rpx;
  height: 586rpx;
}

.award-arrow {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  height: 222rpx;
  width: 160rpx;
}

.award-record {
  margin-top: 40rpx;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255,255,255,1);
}

.award-draw {
  position: absolute;
  left: 50%;
  top: 52%;
  transform: translate3d(-50%, -50%, 0);
  width: 79rpx;
  height: 36rpx;
}

.award-num {
  position: absolute;
  left: 50%;
  top: 58%;
  transform: translate3d(-50%, -50%, 0);
  font-size: 11px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(168,52,42,1);
}

.about {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
}

.about-container {
  position: relative;
  margin: 320rpx auto;
  width: 576rpx;
  height: 470rpx;
  box-sizing: border-box;
}

.about-bg {
  position: absolute;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 4;
}

.about-title {
  position: absolute;
  top: -30%;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  width: 216rpx;
  height: 223rpx;
  z-index: 6;
}

.out_tips1 {
  position: absolute;
  top: 116rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  z-index: 5;
  font-size: 20px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255,94,158,1);
}

.out_tips2 {
  position: absolute;
  top: 195rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  width: 280rpx;
  z-index: 5;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  font-size: 15px;
  color: rgba(252,255,1,1);
  text-align: center;
}

.out_tips3 {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  width: 280rpx;
  z-index: 5;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(252,255,1,1);
  text-align: center;
  font-size: 20px;
}

.answer-wrap {
  position: absolute;
  top: 326rpx;
  width: 100%;
  z-index: 5;
  text-align: center;
}

.right-btn {
  width: 258rpx;
  height: 97rpx;
}

.form-item {
  position: absolute;
  display: flex;
  left: 50%;
  transform: translateX(-50%);
  padding-left: 35rpx;
  width: 480rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(255,255,255,1);
  border: 1px solid rgba(255,255,255,1);
  border-radius: 45rpx;
  z-index: 5;
  color: #5713B6FF;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.form-item text {
  width: 136rpx;
  text-align: justify;
}

.form-item text::after {
  display: inline-block;
  width: 100%;
  content: '';
  height: 0;
}

.form-item input {
  flex: 1;
  padding-right: 35rpx;
  height: 90rpx;
  line-height: 90rpx;
}
